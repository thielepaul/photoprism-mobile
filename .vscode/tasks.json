{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pub get",
            "type": "process",
            "command": "flutter",
            "args": [
                "pub",
                "get"
            ],
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "process",
            "command": "flutter",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": [
                "pub get"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "KEY_PASSWORD=$(cat key.pass) flutter build apk --no-shrink --flavor prod",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": [
                "pub get",
                "generate-key-store",
                "restart adb in docker container"
            ]
        },
        {
            "label": "install",
            "type": "process",
            "command": "adb",
            "args": [
                "install",
                "build/app/outputs/apk/prod/release/app-prod-release.apk"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "generate-key-store",
            "type": "shell",
            "command": "test -f key.jks && echo 'INFO: file key.jks exists, doing nothing' || keytool -genkey -v -keystore key.jks -keyalg RSA -keysize 2048 -validity 10000 -alias key -dname CN=Dev -storepass $(cat key.pass) -keypass $(cat key.pass)",
            "problemMatcher": [],
            "dependsOn": [
                "generate-key-store-password"
            ]
        },
        {
            "label": "generate-key-store-password",
            "type": "shell",
            "command": "test -f key.pass && echo 'INFO: file key.pass exists, doing nothing' || openssl rand -base64 32 > key.pass",
            "problemMatcher": []
        },
        {
            "label": "restart adb in docker container",
            "type": "shell",
            "command": "adb devices -l | grep -q 'device ' || (test -f /usr/bin/restart-adb && restart-adb)",
            "problemMatcher": []
        },
        {
            "label": "prepare debug",
            "dependsOn": [
                "pub get",
                "restart adb in docker container"
            ]
        }
    ]
}